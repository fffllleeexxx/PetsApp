<Window x:Class="PetsApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetsApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Login" Margin="0,0,0,10" FontSize="16" />
            <TextBox x:Name="txtLogin" Width="200" Margin="0,0,0,10" />
            <TextBlock Text="Password" Margin="0,0,0,10" FontSize="16" />
            <PasswordBox x:Name="txtPassword" Width="200" Margin="0,0,0,10" />
            <Button Content="Login" Width="100" Click="btnLogin_Click" />
        </StackPanel>
    </Grid>
</Window>
